		<dependency>
			<groupId>unknown</groupId>
			<artifactId>intentfinder</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>system</scope>
			<systemPath>${basedir}/src/main/etc/patchedfindbugs.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>unknown</groupId>
			<artifactId>kxml2</artifactId>
			<version>2.3.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/src/main/etc/kxml2-min-2.3.0.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
