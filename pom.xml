		<dependency>
		  <groupId>clojure-refactoring</groupId>
		  <artifactId>clojure-refactoring</artifactId>
		  <version>0.5.0</version>
		</dependency>
		<dependency>
			<groupId>asm</groupId>
			<artifactId>asm-all</artifactId>
			<version>3.3.1</version>
		</dependency>
	</dependencies>
</project>
